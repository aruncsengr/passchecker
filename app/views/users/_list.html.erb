<h3>Users</h3>
<table>
  <thead>
    <th>Row Number</th>
    <th>Name</th>
    <th>Password</th>
    <th>Result</th>
  </thead>
  <tbody>
    <% users.each.with_index(1) do |user, index| %>
      <tr>
        <td><%= index %></td>
        <td><%= user.name %></td>
        <td><%= user.password %></td>
        <td>
          <% if user.errors.full_messages.present? %>
            <ol>
              <% user.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ol>
          <% else %>
             <span class='green'>Success</span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
